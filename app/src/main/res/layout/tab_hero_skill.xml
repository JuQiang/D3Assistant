<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff404040"
    android:orientation="vertical"
    xmlns:skills="http://schemas.android.com/apk/res-auto"
    >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        >

        <TableRow>

            <iamfqq.d3assistant.ActiveSkillView
                android:id="@+id/skillL"
                skills:IndicatorIcon="@drawable/skilll"
                skills:Border="@drawable/skillborder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <iamfqq.d3assistant.ActiveSkillView
                android:id="@+id/skillR"
                skills:IndicatorIcon="@drawable/skillr"
                skills:Border="@drawable/skillborder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow>

            <iamfqq.d3assistant.ActiveSkillView
                android:id="@+id/skill1"
                skills:IndicatorIcon="@drawable/skill1"
                skills:Border="@drawable/skillborder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <iamfqq.d3assistant.ActiveSkillView
                android:id="@+id/skill2"
                skills:IndicatorIcon="@drawable/skill2"
                skills:Border="@drawable/skillborder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow>
            <iamfqq.d3assistant.ActiveSkillView
                android:id="@+id/skill3"
                skills:IndicatorIcon="@drawable/skill3"
                skills:Border="@drawable/skillborder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <iamfqq.d3assistant.ActiveSkillView
                android:id="@+id/skill4"
                skills:IndicatorIcon="@drawable/skill4"
                skills:Border="@drawable/skillborder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow>

            <iamfqq.d3assistant.PassiveSkillView
                android:id="@+id/skillPassive1"
                skills:Border="@drawable/skillpassiveborder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <iamfqq.d3assistant.PassiveSkillView
                android:id="@+id/skillPassive2"
                skills:Border="@drawable/skillpassiveborder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow>

            <iamfqq.d3assistant.PassiveSkillView
                android:id="@+id/skillPassive3"
                skills:Border="@drawable/skillpassiveborder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <iamfqq.d3assistant.PassiveSkillView
                android:id="@+id/skillPassive4"
                skills:Border="@drawable/skillpassiveborder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

    </TableLayout>
</LinearLayout>